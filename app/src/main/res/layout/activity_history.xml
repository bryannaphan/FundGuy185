<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucsb.cs.cs185.bryannaphan.fundguy.HistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chart"
            android:background="#ede1d1"
            android:layout_weight="1">
        </com.github.mikephil.charting.charts.BarChart>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/buttonLayout"
                android:weightSum="4">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/entries"
                    android:text="Entry"
                    android:padding="0dp"
                    android:paddingRight="0dp"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/entriesDay"
                    android:text="Entry Day"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:textSize="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/entriesWeek"
                    android:text="Entry Week"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:textSize="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/entriesMonth"
                    android:text="Entry Month"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:textSize="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOMETHING, BUT NOT SURE YET"
                android:background="#f1f023"
                android:layout_below="@id/buttonLayout"
                android:id="@+id/entryInfo"
                android:textSize="40dp"/>
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
